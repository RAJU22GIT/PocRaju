<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" controllerName="demo.ladera.demopoc.controller.CreatePage">
<Page showHeader="false">
<Toolbar class=" toolbarBuutons sapUiSmallMarginBottom">
<Button text="INFO" type="Default" press="onInfoPress"/>
<Button text="SEQ" type="Default" press="onSeqPress"/>
</Toolbar>
<HBox id="infoSection" justifyContent="SpaceAround" alignItems="Start" >

<VBox class="sapUiSmallMarginEnd" >
<Label text="Purchase Type"/>
<Select id="purchaseType" width="250px">
<items> </items>
</Select>
<Label text="Ship To Party"/>
<Input id="shipToParty" placeholder="Select Ship To Party" width="250px"/>
<Label text="Address"/>
<Input id="address" value="" width="250px"/>
</VBox>

<VBox class="sapUiSmallMarginEnd" >
<Label text="Payment Type"/>
<Select id="paymentType" width="250px">
<items> </items>
</Select>
<Label text="Dealer Ref No."/>
<Input id="dealerRefNo" placeholder="Enter Dealer Ref No." width="250px"/>
<Label text="PO Ref Date"/>
<DatePicker id="poRefDate" placeholder=" " width="250px"/>
</VBox>

<VBox class="sapUiSmallMarginEnd" >
<Label text="Credit Limit"/>
<Text id="creditLimit" text="0.00" width="250px"/>
<Label text="Current Order"/>
<Text id="currentOrder" text="0.00" width="250px"/>
<Label text="Enable Unit Price"/>
<Switch id="enableUnitPrice" state="false" change="onEnableUnitPriceChange"/>
<Label text="Balance Credit"/>
<Text id="balanceCredit" text="0.00" width="250px"/>
</VBox>

