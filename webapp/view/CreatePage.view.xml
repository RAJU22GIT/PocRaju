<Label text="Total Order Quantity"/>
<Text id="totalOrderQty" text="0" width="250px"/>

<VBox id="vbox4Extra" visible="false">
<Label text="VAT Amount"/>
<Text id="vatAmount" text="0.00" width="250px"/>
<Label text="Total Amount Excluding VAT"/>
<Text id="amountExclVAT" text="0.00" width="250px"/>
<Label text="Total Amount Including VAT"/>
<Text id="amountInclVAT" text="0.00" width="250px"/>
</VBox>
</VBox> -->
</HBox>

<VBox id="seqSection" class="sapUiSmallMarginTop">

    
    <Toolbar class="tool">
        <Title text="SEQ" level="H2"/>
          </Toolbar> 
          <Toolbar> 
        <RadioButtonGroup columns="2" selectedIndex="0" select=".onRadioSelect">
            <buttons>
                <RadioButton text="Manual Selection"/>
                <RadioButton text="Excel Upload"/>
            </buttons>
        </RadioButtonGroup>
         <HBox class="sapUiSmallMargin" visible="false" id="uploadBox">
        <Button  icon="sap-icon://upload" text="UPLOAD" />
    </HBox>
    </Toolbar>

 
    <Toolbar>
        <Title text="Stock Legend" level="H3"/>
       
        <ObjectStatus text="Available" state="Success"/>
        <ObjectStatus text="Limited" state="Warning"/>
        <ObjectStatus text="Not Available" state="Error"/>
    </Toolbar>

   
    <Table inset="false" growing="true" growingScrollToLoad="true" items="{ path: 'itemsModel>/items' }">
    <headerToolbar>
<Toolbar>
<Title text="Items" level="H3"/>
<ToolbarSpacer/>
<Button text="Add Item" type="Emphasized" icon="sap-icon://add" press="onAddItem"/>
</Toolbar>
</headerToolbar>
        <columns>
            <Column><Text text="Seq"/></Column>
            <Column><Text text="Material"/></Column>
            <Column><Text text="Quantity"/></Column>
            <Column><Text text="In Stock"/></Column>
            <Column><Text text="ETA"/></Column>
            <Column><Text text="MSRP"/></Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Input value="{itemsModel>seq}" type="Number" placeholder="0"/>
                    <Input value="{itemsModel>material}" placeholder="Enter Material"/>
                    <Input value="{itemsModel>quantity}" type="Number" placeholder="0"/>
                    <ObjectStatus state="{itemsModel>stockState}" text="{itemsModel>stockStatus}"/>
                    <Text text="{itemsModel>eta}"/>
                    <Text text="{itemsModel>msrp}"/>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</VBox>
<footer>
<Toolbar>
<ToolbarSpacer/>
<Button text="Clear" type="Reject" icon="sap-icon://delete"/>
<Button text="Review" type="Accept" icon="sap-icon://accept"/>
</Toolbar>
</footer>
</Page>
</mvc:View>