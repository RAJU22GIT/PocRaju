<mvc:View
  controllerName="demo.ladera.demopoc.controller.CartPage"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:tnt="sap.tnt"
  xmlns:l="sap.ui.layout">

  <Page showHeader="false" enableScrolling="false">
    <FlexBox direction="Row" fitContainer="true" width="100%" height="100%">

      <!-- Sidebar -->
      <tnt:SideNavigation id="sideNav1" expanded="false">
        <tnt:NavigationList itemSelect="onSideItemSelect">
          <tnt:NavigationListItem text="" key="__toggle" icon="sap-icon://menu2"/>
          <tnt:NavigationListItem text="MODELS" key="root" icon="sap-icon://employee" expanded="true">
            <tnt:NavigationListItem text="HALF HAND T-SHIRTS" key="half"/>
            <tnt:NavigationListItem text="PRINTED T-SHIRTS" key="printed"/>
            <tnt:NavigationListItem text="5 SLEEVE T-SHIRTS" key="five"/>
            <tnt:NavigationListItem text="WOMAN T-SHIRTS" key="woman"/>
            <tnt:NavigationListItem text="HOODIE T-SHIRTS" key="hoodie"/>
            <tnt:NavigationListItem text="THEMED T-SHIRTS" key="themed"/>
          </tnt:NavigationListItem>
        </tnt:NavigationList>
        <tnt:fixedItem>
          <tnt:NavigationList>
            <tnt:NavigationListItem icon="sap-icon://cart" press="onCartPress"/>
          </tnt:NavigationList>
        </tnt:fixedItem>
      </tnt:SideNavigation>

      <!-- Main Content -->
      <VBox id="mainContent" width="90%" height="90%" class="mainContainer sapUiMediumMargin">

        <HBox justifyContent="Center" alignItems="Stretch" class="productCard" height="100%">

          <!-- Product Images -->
          <VBox class="imageSection">
            <Carousel height="400px" pages="{productModel>/images}" class="carouselFix">
              <pages>
                <Image src="{productModel>src}" class="productImage" />
              </pages>
            </Carousel>
          </VBox>

          <!-- Product Details -->
          <VBox class="infoSection" width="50%">
            <Text text="{productModel>/name}" class="productTitle"/>
            <Text text="Model: {productModel>/model}" class="modelText"/>

            <HBox class="priceBox">
              <Text text="₹ {productModel>/price}" class="priceText"/>
              <RatingIndicator value="4.5" maxValue="5" iconSize="1.5rem" visualMode="Half" />
            </HBox>

            <Select selectedKey="{productModel>/size}" width="150px">
              <core:Item key="S" text="Small"/>
              <core:Item key="M" text="Medium"/>
              <core:Item key="L" text="Large"/>
              <core:Item key="XL" text="XL"/>
            </Select>

            <HBox class="quantityBox" alignItems="Center">
              <Button icon="sap-icon://less" press="onDecreaseQty"/>
              <Text text="{productModel>/quantity}" class="qtyText"/>
              <Button icon="sap-icon://add" press="onIncreaseQty"/>
            </HBox>

            <Text text="Subtotal: ₹ {productModel>/subtotal}" class="subtotalText"/>

            <HBox class="three">
              <Button text="Add to Cart" type="Emphasized" press="onAddToCart"/>
              <Button icon="sap-icon://favorite" tooltip="Add to Wishlist"/>
              <Button icon="sap-icon://share" tooltip="Share Product"/>
            </HBox>

            <List class="reviewList">
              <FeedListItem sender="Thailand T-Shirts" icon="sap-icon://hint" info="Product Highlights"
                            text="Soft cotton fabric, available in multiple colors, lightweight  comfortable."/>
              <!-- <FeedListItem sender="Customer Review" icon="sap-icon://customer" info="Verified Buyer"
                            text="Really good quality material! Fits perfectly and feels comfortable."/> -->
            </List>
          </VBox>

        </HBox>
      </VBox>
    </FlexBox>
  </Page>
</mvc:View>
